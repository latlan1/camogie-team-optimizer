{
  "name": "camogie-team-minizinc-optimization",
  "version": "1.0.0",
  "description": "Web interface for converting CSV player data to MiniZinc files and optimizing team assignments via linear programming",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/web/server.ts",
    "build": "npm run build:wasm",
    "build:wasm": "echo 'Build WASM bundle' && echo 'TODO: Implement bundler for browser build'",
    "copy-wasm": "cp -r node_modules/minizinc/dist/minizinc*.wasm node_modules/minizinc/dist/minizinc*.data public/ 2>/dev/null || echo 'WASM files will be copied after npm install'",
    "cli": "tsx src/cli/commands.ts",
    "cli:help": "tsx src/cli/commands.ts --help",
    "test:cbc": "tsx src/cli/commands.ts --solver cbc",
    "test:coinbc": "tsx src/cli/commands.ts --solver coinbc",
    "test:cp-sat": "tsx src/cli/commands.ts --solver cp-sat",
    "test:chuffed": "tsx src/cli/commands.ts --solver chuffed",
    "test:gecode": "tsx src/cli/commands.ts --solver gecode",
    "test:all-solvers": "tsx src/cli/commands.ts --solver all",
    "test:ratings": "tsx src/cli/commands.ts --scenario ratings_only",
    "test:positions": "tsx src/cli/commands.ts --scenario with_positions",
    "test:balanced": "tsx src/cli/commands.ts --scenario balanced_positions",
    "test:all-scenarios": "tsx src/cli/commands.ts --scenario all",
    "test:all": "tsx src/cli/commands.ts --solver all --scenario all",
    "test:matrix": "tsx src/cli/commands.ts -s all -c all",
    "predev": "npm run copy-wasm",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'TODO: Add ESLint configuration'",
    "format": "echo 'TODO: Add Prettier configuration'"
  },
  "keywords": [
    "minizinc",
    "optimization",
    "linear-programming",
    "constraint-programming",
    "wasm"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "express": "^4.21.1",
    "minizinc": "^4.4.4"
  }
}
